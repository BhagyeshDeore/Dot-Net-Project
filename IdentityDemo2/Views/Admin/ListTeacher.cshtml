@model IEnumerable<IdentityDemo2.Models.ApplicationUser>

<div class="container mt-4">
    <h2 class="text-center">Teacher List</h2>

    <table class="table table-striped table-bordered table-fade-in">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Email</th>
                <th scope="col">First Name</th>
                <th scope="col">Status</th>
                <th scope="col">Action</th>
                <th scope="col">Update</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacherUser in Model)
            {
                <tr>
                    <td>@teacherUser.Id</td>
                    <td>@teacherUser.Email</td>
                    <td>@teacherUser.Name</td>
                    <td>@(teacherUser.sTATUS == IdentityDemo2.Models.ACTIVATION_STATUS.ACTIVE ? "Active" : "Deactivate")</td>
                    <td>
                        @if (teacherUser.sTATUS == IdentityDemo2.Models.ACTIVATION_STATUS.ACTIVE)
                        {
                            <form asp-action="ToggleStatusForTeacher" asp-route-userId="@teacherUser.Id" method="post">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Deactivate
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="ToggleStatusForTeacher" asp-route-userId="@teacherUser.Id" method="post">
                                <button type="submit" class="btn btn-sm btn-primary">
                                    Activate
                                </button>
                            </form>
                        }
                    </td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="Update" asp-route-id="@teacherUser.Id">
                            Update
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
