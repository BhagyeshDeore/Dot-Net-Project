@model IEnumerable<ApplicationUser>


<div class="container mt-4">
    <h2 class="text-center">Student List</h2>

    <table class="table table-striped table-bordered table-fade-in">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Email</th>
                <th scope="col">First Name</th>
                <th scope="col">Update</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var studentUsers in Model)
            {
                <tr>
                    <td>@studentUsers.Id</td>
                    <td>@studentUsers.Email</td>
                    <td>@studentUsers.Name</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@studentUsers.Id">
                            Update
                        </a>
                    </td>
                </tr>
            }
    </table>


    
</div>


