@model IEnumerable<ApplicationUser>

<div class="container mt-4">
    <h2 class="text-center">Student List</h2>

    <table class="table table-striped table-bordered table-fade-in">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Email</th>
                <th scope="col">First Name</th>
                <th scope="col">Status</th>
                <th scope="col">Action</th>
                <th scope="col">Update</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var studentUser in Model)
            {
                <tr>
                    <td>@studentUser.Id</td>
                    <td>@studentUser.Email</td>
                    <td>@studentUser.Name</td>
                    <td>@(studentUser.sTATUS == ACTIVATION_STATUS.ACTIVE ? "Active" : "Deactivate")</td>
                    <td>
                        @if (studentUser.sTATUS == ACTIVATION_STATUS.ACTIVE)
                        {
                            <form asp-action="ToggleStatusForStudent" asp-route-userId="@studentUser.Id" method="post">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Deactivate
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="ToggleStatusForStudent" asp-route-userId="@studentUser.Id" method="post">
                                <button type="submit" class="btn btn-sm btn-primary">
                                    Activate
                                </button>
                            </form>
                        }
                    </td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="Update" asp-route-id="@studentUser.Id">
                            Update
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
