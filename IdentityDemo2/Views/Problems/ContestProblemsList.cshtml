                @Html.DisplayNameFor(model => model.Testcase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResultOfTestCase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SolutionCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contest)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
