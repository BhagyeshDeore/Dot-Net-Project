                @Html.DisplayFor(modelItem => item.SampleOutput)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Testcase)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResultOfTestCase)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SolutionCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contest.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
