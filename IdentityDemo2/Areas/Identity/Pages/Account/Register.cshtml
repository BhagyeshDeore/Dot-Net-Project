@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" integrity="...">
    <style>
        body {
            background: url('/images/bg-3.jpg') no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
        }

        .register-container {
            max-width: 800px;
            margin: auto;
            margin-top: 50px;
        }

        .register-form {
            background-color: rgba(255, 255, 255, 0.8);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-floating {
            margin-bottom: 15px;
        }

        #registerSubmit {
            background-color: #007bff;
            border: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col register-container">
                <h1 class="text-center">@ViewData["Title"]</h1>
               
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="register-form">

                    <h2>Create a new account.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="row">
                        <div class="col-sm">
                            <div class="form-floating">
                                <input asp-for="Input.Name" class="form-control" autocomplete="username" aria-required="true" />
                                <label asp-for="Input.Name">Full Name</label>
                                <span asp-validation-for="Input.Name" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="Input.Address" class="form-control" autocomplete="username" aria-required="true" />
                                <label asp-for="Input.Address">Address</label>
                                <span asp-validation-for="Input.Address" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="username" aria-required="true" />
                                <label asp-for="Input.PhoneNumber">Phone Number</label>
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>


                        </div>


                        <div class="col-sm">
                            <div class="form-floating">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                <label asp-for="Input.Email">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" />
                                <label asp-for="Input.Password">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" />
                                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                   
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="..."></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
