@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title >@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" integrity="...">
    <!-- Add additional stylesheets for customization -->
    <style>
        /* C:\Users\Admin\Desktop\Parikshak Dot Net\IdentityDemo2\Areas\Identity\Pages\Account\srcimg\bg-1.jpg */
        body {
            background: url('/images/background.jpg') no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif; /* Add your preferred font-family */
        }

        .login-container {
            max-width: 400px;
            margin: auto;
            margin-top: 25px;
        }

        .login-form {
            background-color: rgba(255, 255, 255, 0.9); /* Semi-transparent white background */
            padding: 10px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-floating {
            margin-bottom: 15px;
        }

        #login-submit {
            background-color: #007bff;
            border: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 login-container">
                <h1 class="text-center text-white">@ViewData["Title"]</h1>
                <form id="account" method="post" class="login-form">
                    <h2 class="text-center">Use your credentials to log in</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating">
                        <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                   @*    <div class="form-floating">
                    <select asp-for="Input.Role" class="form-select" aria-label="Select Role">
                        <option value="Student">Student</option>
                        <option value="Teacher">Teacher</option>
                    </select>
                    <label asp-for="Input.Role">Role</label>
                </div> 
 *@
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe">Remember me</label>
                    </div>

                    <div class="mt-3">
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>

                    <div class="mt-3 text-center">
                        <a asp-page="./ForgotPassword">Forgot your password?</a>
                    </div>

                    <div class="mt-3 text-center">
                        <p>Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register here</a></p>
                    </div>

                    <div class="mt-3 text-center">
                        <a asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
     

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="..."></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
